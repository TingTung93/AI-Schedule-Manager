        {
          "name": "Update Employee Department",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Department was updated', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.departmentId).to.eql(3);",
                  "    pm.expect(response.department.id).to.eql(3);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
