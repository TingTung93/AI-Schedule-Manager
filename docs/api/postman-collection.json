        {
          "name": "Filter Employees by Department",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('All employees belong to department', function () {",
                  "    const response = pm.response.json();",
                  "    const deptId = parseInt(pm.collectionVariables.get('department_id'));",
                  "    response.forEach(emp => {",
                  "        pm.expect(emp.departmentId).to.eql(deptId);",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
