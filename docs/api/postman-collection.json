{
  "info": {
    "name": "AI Schedule Manager - Department Assignment API",
    "description": "Complete collection of department assignment enhancements for employee management",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "employee_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "department_id",
      "value": "2",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save access token to environment",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "    console.log('Access token saved:', response.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Authenticate and obtain JWT access token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "List All Employees",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Employees have department data', function () {",
                  "    const response = pm.response.json();",
                  "    if (response.length > 0) {",
                  "        pm.expect(response[0]).to.have.property('department');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/employees?limit=100",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"],
              "query": [
                {
                  "key": "limit",
                  "value": "100",
                  "description": "Maximum number of results"
                },
                {
                  "key": "skip",
                  "value": "0",
                  "disabled": true,
                  "description": "Number of records to skip"
                },
                {
                  "key": "is_active",
                  "value": "true",
                  "disabled": true,
                  "description": "Filter by active status"
                },
                {
                  "key": "department_id",
                  "value": "2",
                  "disabled": true,
                  "description": "Filter by department ID"
                }
              ]
            },
            "description": "Retrieve all employees with optional filtering"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/api/employees",
                  "host": ["{{base_url}}"],
                  "path": ["api", "employees"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [],
              "cookie": [],
