            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Bob\",\n  \"lastName\": \"Wilson\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            },
            "description": "Create employee without email - system auto-generates unique email"
          },
          "response": []
        },
        {
          "name": "Create Employee - Invalid Department (404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Error message is helpful', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.detail).to.include('Department with ID');",
                  "    pm.expect(response.detail).to.include('not found');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"departmentId\": 999\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            },
            "description": "Test department validation - should return 404 for non-existent department"
          },
          "response": []
        },
        {
          "name": "Create Employee - Duplicate Email (409)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 409', function () {",
                  "    pm.response.to.have.status(409);",
                  "});",
                  "",
                  "pm.test('Error provides suggestions', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.detail).to.include('already exists');",
                  "    pm.expect(response.detail).to.include('Suggestions');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
