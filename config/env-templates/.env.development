# Development Environment Configuration
# AI Schedule Manager - Development Settings

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
ENVIRONMENT=development
DEBUG_MODE=true

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================
DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/ai_schedule_manager_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_schedule_manager_dev
DB_USER=postgres
DB_PASSWORD=devpassword

# Relaxed pool settings for development
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# CACHE CONFIGURATION (Development)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Shorter cache TTL for development
CACHE_TTL_SHORT=60       # 1 minute
CACHE_TTL_MEDIUM=300     # 5 minutes
CACHE_TTL_LONG=600       # 10 minutes

# =============================================================================
# SECURITY CONFIGURATION (Development)
# =============================================================================
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=dev-session-secret-not-for-production
SESSION_COOKIE_MAX_AGE=86400000

# Permissive CORS for development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# Relaxed security for development
HELMET_ENABLED=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# EXTERNAL SERVICES (Development - Mock/Test)
# =============================================================================
# Use test/mock services in development
SENDGRID_API_KEY=test_key
EMAIL_FROM=dev@localhost
EMAIL_FROM_NAME=AI Schedule Manager Dev

# Mock external services
MOCK_EXTERNAL_SERVICES=true

# Test calendar integration
GOOGLE_CALENDAR_CLIENT_ID=test_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=test_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/auth/google/callback

# =============================================================================
# AI AND ML SERVICES (Development)
# =============================================================================
# Use test API key or mock services
OPENAI_API_KEY=test_openai_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=50

# Mock AI responses in development
MOCK_AI_RESPONSES=true

# =============================================================================
# MONITORING AND OBSERVABILITY (Development)
# =============================================================================
# Disabled or minimal monitoring in development
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0

# Detailed logging for development
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/dev.log

# Enable health checks and metrics
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# =============================================================================
# FEATURE FLAGS (Development - All Enabled)
# =============================================================================
# Enable all features for development testing
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=true

FEATURE_AI_SCHEDULING=true
FEATURE_CALENDAR_SYNC=true
FEATURE_TEAM_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=true

FEATURE_SLACK_INTEGRATION=true
FEATURE_TEAMS_INTEGRATION=true
FEATURE_ZOOM_INTEGRATION=true

# Enable experimental features for testing
FEATURE_VOICE_COMMANDS=true
FEATURE_SMART_SUGGESTIONS=true
FEATURE_PREDICTIVE_SCHEDULING=true

# =============================================================================
# FILE STORAGE (Development)
# =============================================================================
UPLOAD_MAX_FILE_SIZE=52428800  # 50MB for development
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DESTINATION=./uploads/dev

# Use local storage in development
AWS_REGION=us-west-2
AWS_S3_BUCKET=
USE_LOCAL_STORAGE=true

# =============================================================================
# PERFORMANCE AND SCALING (Development)
# =============================================================================
PORT=8000
HOST=0.0.0.0
WORKERS=1

# Generous timeouts for development
REQUEST_TIMEOUT=60000
KEEP_ALIVE_TIMEOUT=5000

# Background jobs
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=2

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=true
SEED_DATABASE=true

# Test database
TEST_DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/ai_schedule_manager_test
TEST_REDIS_URL=redis://localhost:6379/15

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_UI_PATH=/docs
API_DOCS_ENABLED=true

# =============================================================================
# BACKUP AND MAINTENANCE (Development)
# =============================================================================
BACKUP_ENABLED=false
MAINTENANCE_MODE=false

# =============================================================================
# HOT RELOAD AND DEVELOPMENT TOOLS
# =============================================================================
# Development-specific settings
HOT_RELOAD_ENABLED=true
WATCH_FILES=true
RESTART_ON_CHANGE=true

# Frontend development
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Development proxy settings
PROXY_API_REQUESTS=true
PROXY_TARGET=http://localhost:8000

# =============================================================================
# DOCKER DEVELOPMENT OVERRIDES
# =============================================================================
# Override for Docker Compose development
POSTGRES_HOST=db
REDIS_HOST=redis
DATABASE_URL=postgresql://postgres:devpassword@db:5432/ai_schedule_manager_dev
REDIS_URL=redis://redis:6379/0

# =============================================================================
# LOCAL DEVELOPMENT EXTENSIONS
# =============================================================================
# Enable custom modules and plugins for development
CUSTOM_MODULES_ENABLED=true
CUSTOM_MODULES_PATH=./extensions

PLUGINS_ENABLED=true
PLUGINS_PATH=./plugins

# Development webhooks
WEBHOOK_URL_PREFIX=http://localhost:8000/webhooks

# Local tunnel for webhook testing (ngrok, etc.)
TUNNEL_URL=

# =============================================================================
# DEVELOPMENT TEAM SETTINGS
# =============================================================================
# Team-specific configurations
DEV_TEAM_SLACK_WEBHOOK=
DEV_NOTIFICATIONS_ENABLED=true

# Database seeding
SEED_SAMPLE_DATA=true
SEED_TEST_USERS=true
SEED_ADMIN_USER=true

# Performance profiling
ENABLE_PROFILING=true
PROFILING_SAMPLE_RATE=1.0