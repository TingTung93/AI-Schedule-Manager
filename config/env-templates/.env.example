# AI Schedule Manager Environment Configuration Template
# Copy this file to .env and configure for your environment

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development
ENVIRONMENT=development

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_schedule_manager
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_schedule_manager
DB_USER=postgres
DB_PASSWORD=password

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL Settings (in seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=3600      # 1 hour

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_COOKIE_MAX_AGE=86400000  # 24 hours in milliseconds

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=AI Schedule Manager

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=

OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_REDIRECT_URI=

# =============================================================================
# AI AND ML SERVICES
# =============================================================================

# OpenAI API
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# Alternative AI Services
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=ai-schedule-manager-development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Metrics and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PUSH_NOTIFICATIONS=false

# Advanced Features
FEATURE_AI_SCHEDULING=true
FEATURE_CALENDAR_SYNC=true
FEATURE_TEAM_COLLABORATION=false
FEATURE_ADVANCED_ANALYTICS=false

# Integration Features
FEATURE_SLACK_INTEGRATION=false
FEATURE_TEAMS_INTEGRATION=false
FEATURE_ZOOM_INTEGRATION=false

# Experimental Features
FEATURE_VOICE_COMMANDS=false
FEATURE_SMART_SUGGESTIONS=false
FEATURE_PREDICTIVE_SCHEDULING=false

# =============================================================================
# FILE STORAGE AND UPLOADS
# =============================================================================

# File Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DESTINATION=./uploads

# AWS S3 Configuration (if using cloud storage)
AWS_REGION=us-west-2
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# PERFORMANCE AND SCALING
# =============================================================================

# Server Configuration
PORT=8000
HOST=0.0.0.0
WORKERS=1

# Request Timeouts (in milliseconds)
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development Settings
DEBUG_MODE=true
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_schedule_manager_test
TEST_REDIS_URL=redis://localhost:6379/15

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_UI_PATH=/docs

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Microsoft Teams Integration
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=

# Webhook URLs
WEBHOOK_URL_PREFIX=https://yourdomain.com/webhooks

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# Mobile API
MOBILE_API_VERSION=v1
MOBILE_APP_STORE_URL=
MOBILE_PLAY_STORE_URL=

# Push Notification Settings
PUSH_NOTIFICATION_ENABLED=false
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================

# GDPR Compliance
GDPR_ENABLED=false
DATA_RETENTION_DAYS=2555  # 7 years

# Privacy Settings
ANALYTICS_ENABLED=true
COOKIE_CONSENT_REQUIRED=false
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# =============================================================================
# CUSTOM EXTENSIONS
# =============================================================================

# Custom Modules
CUSTOM_MODULES_ENABLED=false
CUSTOM_MODULES_PATH=./extensions

# Plugin System
PLUGINS_ENABLED=false
PLUGINS_PATH=./plugins

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# Add any environment-specific configurations below
# These will be loaded after the base configuration