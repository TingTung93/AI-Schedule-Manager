[flake8]
# Flake8 configuration for backend Python code

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    alembic,
    .pytest_cache,
    htmlcov,
    reports

# Error codes to ignore
# E203: Whitespace before ':'
# E501: Line too long (handled by max-line-length)
# W503: Line break before binary operator
# W504: Line break after binary operator
# E722: Do not use bare except (we handle this carefully)
ignore = E203,E501,W503,W504,E722

# Select specific error codes
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Show source code for errors
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
