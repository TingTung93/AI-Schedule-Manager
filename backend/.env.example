# AI Schedule Manager - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://scheduleuser:changeme@localhost:5432/scheduledb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AI Schedule Manager
VERSION=0.1.0
DEBUG=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@aischedulemanager.com
EMAILS_FROM_NAME=AI Schedule Manager

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json

# NLP Model Configuration
SPACY_MODEL=en_core_web_sm
NLP_CACHE_ENABLED=true
NLP_CACHE_TTL_SECONDS=3600

# Scheduling Configuration
MAX_OPTIMIZATION_TIME_SECONDS=30
DEFAULT_MIN_STAFF_PER_SHIFT=1
DEFAULT_MAX_STAFF_PER_SHIFT=10
MIN_REST_HOURS_BETWEEN_SHIFTS=8

# Feature Flags
ENABLE_SWAGGER_UI=true
ENABLE_NEURAL_LEARNING=false
ENABLE_ADVANCED_ANALYTICS=true

# Environment
ENVIRONMENT=development  # development, staging, production