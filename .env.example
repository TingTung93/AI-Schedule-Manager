# AI Schedule Manager Environment Configuration
# Copy this file to .env and update with your values

# ==============================================================================
# SECURITY SETTINGS (REQUIRED - MUST CHANGE IN PRODUCTION!)
# ==============================================================================
JWT_SECRET=change-this-to-a-random-string-at-least-32-chars
JWT_REFRESH_SECRET=change-this-to-another-random-string-at-least-32-chars

# ==============================================================================
# CLOUDFLARE TUNNEL CONFIGURATION
# ==============================================================================

# Option 1: Quick Tunnel (Easiest - No account required)
# Creates a temporary tunnel with a random URL
USE_QUICK_TUNNEL=true

# Option 2: Token-based Tunnel (Recommended for production)
# Get your token from: https://one.dash.cloudflare.com/
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# Option 3: Named Tunnel (Advanced - Requires Cloudflare account)
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token
# TUNNEL_NAME=ai-schedule-manager
# TUNNEL_HOSTNAME=scheduler.yourdomain.com

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DB_USER=scheduler
DB_PASSWORD=scheduler_pass
DB_NAME=ai_schedule_manager
DATABASE_URL=postgresql://scheduler:scheduler_pass@localhost/ai_schedule_manager
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme_use_strong_password_in_production

# ==============================================================================
# EMAIL CONFIGURATION (Optional)
# ==============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@ai-scheduler.local

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
NODE_ENV=production
PYTHON_ENV=production
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
BACKEND_CORS_ORIGINS=["http://localhost","https://localhost"]

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_BACKUP=true
ENABLE_ANALYTICS=true

# ==============================================================================
# MONITORING (Optional)
# ==============================================================================
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# SENTRY_DSN=your-sentry-dsn
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=changeme_use_strong_password_in_production

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO

# ==============================================================================
# RESOURCE LIMITS (Adjust based on your system)
# ==============================================================================
# DOCKER_CPUS=2.0
# DOCKER_MEMORY=2G