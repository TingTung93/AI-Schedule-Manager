{
  "name": "ai-schedule-manager",
  "version": "0.1.0",
  "description": "AI-powered scheduling system for small businesses",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && ./start.sh",
    "frontend": "cd frontend && npm start",
    "backend:dev": "cd backend && python src/main.py",
    "frontend:dev": "cd frontend && npm start",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest tests/",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:e2e": "npx playwright test",
    "build": "cd frontend && npm run build",
    "clean": "rm -rf frontend/node_modules backend/venv"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "@playwright/test": "^1.40.0"
  }
}